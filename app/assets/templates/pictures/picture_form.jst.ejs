<div class="modal-screen"></div>

<div class="modal-form">
  <form>
    <div class="filepicker-widget" id="filepicker-widget">
      <button class="submit-button" id="choose-picture">Choose a picture</button>
      <input
        class="filepicker-url-input"
        type="hidden"
        name="picture[filepicker_url]">
    </div>

    <div class="input-field">
      <textarea name="picture[caption]">Write a caption...</textarea>
    </div>

    <input class="submit-button" id="save-picture" type="submit" value="Save to feed">
  </form>
</div>
