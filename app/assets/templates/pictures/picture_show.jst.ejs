<div class="picture-details-container">
  <a class="picture-details-author-link" href="#"><%= picture.escape("author_username") %></a>
  <span class="picture-details-created-at"><%= moment(picture.escape("created_at")).fromNow() %></span>
</div>

<img class="picture-show-picture" src="<%= picture.escape("url") %>">

<div class="picture-likes-container">
  <a class="picture-likes-button" href="#"></a>
  <div class="picture-likes-count"></div>
</div>
<div class="picture-caption-container">
  <p>
    <%= picture.escape("caption") %>
  </p>
</div>
<div class="picture-comments-container">
  <ul class="picture-comments-list">
    <li>awesome!</li>
    <li>lmao roflcopter</li>
    <li>best pic ever</li>
  </ul>
</div>
