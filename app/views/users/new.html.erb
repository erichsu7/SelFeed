<div class="form-page-container">
    <% if flash[:errors] %>
      <%= render "layouts/errors" %>
    <% else %>
      <h1 class="new-user-page-header">Sign up for SelFeed</h1>
    <% end %>

    <div class="user-form">
      <header class="user-form-header">SelFeed</header>

      <form action="<%= users_url %>" method="post">
        <%= include_form_auth_token %>

        <div class="input-field clearfix">
          <label for="user_username">Username:</label>
          <input type="text" name="user[username]" value="<%= @user.username %>">
        </div>

        <div class="input-field clearfix">
          <label for="user_display_name">Display name:</label>
          <input type="text" name="user[display_name]" value="<%= @user.display_name %>">
        </div>

        <div class="input-field clearfix">
          <label for="user_password">Password:</label>
          <input type="password" name="user[password]" value="">
        </div>

        <input type="submit" class="submit-button" value="Confirm user">
      </form>

    </div>

    <div class="user-redirect">
      <span>Already have an account?</span>
      <a href="/session/new">Click here to sign in.</a>
    </div>
</div>
